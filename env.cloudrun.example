# Configuration Google Cloud Run
# Copiez ce fichier vers .env.cloudrun et remplissez vos valeurs

# Google Cloud Project Configuration
export GCP_PROJECT_ID="bureaumlmg"
export GCP_REGION="us-central1"

# MongoDB Configuration (Required)
# Get this from MongoDB Atlas: https://cloud.mongodb.com
export MONGO_URI="mongodb+srv://username:password@cluster.mongodb.net/bureau?retryWrites=true&w=majority"
export MONGO_DB_NAME="bureau"

# Redis Configuration (Optional)
# Leave empty to use in-memory cache
export REDIS_URL=""

